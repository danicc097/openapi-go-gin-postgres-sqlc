#!/bin/bash

source "${BASH_SOURCE%/*}/.helpers.sh"

ensure_pwd_is_top_level

cd docker || exit
docker-compose \
  -p full-text-search \
  -f docker-compose.fts.yml \
  --env-file .env \
  up -d --build --remove-orphans --force-recreate 2>&1 # https://github.com/docker/compose/issues/7346
cd - >/dev/null || exit
